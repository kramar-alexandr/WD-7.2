global
updating function Boolean DownPayFromORVClassOnOKWindow(Integer wn)
BEGIN
  record RcVc RepSpec;
  record IVVc IVr;
  Integer nwn;
  Integer r;
  string 255 errstr;
  
  GetWindowRecord(wn,RepSpec);
  if (RepSpec.FirstVer<=0) then begin
    MessageBox(1058,"");
    WindowFieldGoto(wn,RepSpec,-1,"FirstVer",true);
    goto LDownPayFromORVClassOnOKWindow;
  end;
  r = RecordAction_raOrdDownPay(RepSpec.FirstVer,RepSpec.vals0,blankval,IVr,errstr,RepSpec.flags[1]);
  CloseWindow(wn);
  switch (r) begin
    case -1: 
      if (nonblank(errstr)) then begin
        MessageBox(0,errstr);
      end else begin
        Beep;
      end;
    case -2: MessageBox(1281,"");
    otherwise
      nwn = OpenWindow("IVDClass",1,0,"","",IVr);
      UpdateBrowses("ORVc");
  end;
LDownPayFromORVClassOnOKWindow:;  
  DownPayFromORVClassOnOKWindow = false;
  RETURN;
END;

global
procedure IVOpenPrepExists2(string custcode,Boolean invf,record IVVc IVr)
begin
  record ARPayVc ARPayr;
  Boolean TrHs,testf;
  Integer i,rwcnt;
  row IVVc IVrw;
  vector Boolean v_cupnr;

  testf = false;
  if (ProgramType!=typStdAccounts) then begin
    if (invf) then begin
      rwcnt = MatRowCnt(IVr);
      for (i=0;i<rwcnt;i=i+1) begin
        MatRowGet(IVr,i,IVrw);
        if (IVrw.ovst==0 and IVrw.stp==kInvoiceRowTypePrepayment and IVrw.CUPNr>0) then begin
          v_cupnr[IVrw.CUPNr] = true;
        end;
      end;
      TrHs = true;
      ARPayr.CustCode = custcode;
      while (LoopKey("CustCode",ARPayr,1,TrHs)) begin
        if (ARPayr.CustCode!=custcode) then begin
          TrHs = false;
        end else begin
          if (!v_cupnr[ARPayr.CUPNr]) then begin
            testf = true;
            TrHs = false;
          end;
        end;
      end;
    end;
  end else begin
    ARPayr.CustCode = custcode;
    if (ReadFirstKey("CustCode",ARPayr,1,true)) then begin
      testf = true;
    end;
  end;

  if (testf) then begin
    MessageBox(0,USetStr(2025));
  end;

  return;
end;

