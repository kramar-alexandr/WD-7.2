  end else begin
    if (WindowState(wn)==Rs_normal) then begin
      if (UserCanAction("ORToDownPay",true)) then begin
        testf = true;
        GetWindowRecord(wn,ORr);
        r = ORTestApprovalStatus(ORr);
        if (r!=0) then begin
          MessageBox(r,"");
