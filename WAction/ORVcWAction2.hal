global
procedure RecalcORSubtotal(var record ORVc ORr)
begin
  row ORVc ORrw;
  Integer i,rwcnt;
  val st;
  
  rwcnt = MatRowCnt(ORr);
  
  for (i = 0; i<rwcnt; i = i + 1) begin
    MatRowGet(ORr,i,ORrw);
    if (ORrw.stp!=9) then begin
      st = st + ORrw.Sum;
    end else begin
      ORrw.Sum = st;
      st = blankval;
      MatRowPut(ORr,i,ORrw);
    end;
  end;
  
  return;
end;

